{
  "openapi": "3.0.3",
  "info": {
    "title": "REST API: Glazbeni instrumenti",
    "description": "RESTful API za izlaganje otvorenog skupa podataka o glazbenim instrumentima u JSON-LD formatu",
    "version": "1.0.0",
    "contact": {
      "name": "Vinko Šapina",
      "email": "vinko.sapina@fer.unizg.hr"
    },
    "license": {
      "name": "CC0 1.0 Universal",
      "url": "https://creativecommons.org/publicdomain/zero/1.0/legalcode.en"
    }
  },

  "paths": {
    "/api/instrumenti": {
      "get": {
        "summary": "Dohvat svih instrumenata",
        "description": "Vraća cjelokupnu kolekciju instrumenata u JSON-LD formatu. Omogućuje filtriranje putem query parametra.",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Tekst za filtriranje instrumenata",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Uspješno dohvaćena kolekcija instrumenata (JSON-LD)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentCollection"
                }
              }
            }
          },
          "500": {
            "description": "Greška na poslužitelju"
          }
        }
      },
      "post": {
        "summary": "Dodavanje novog instrumenta",
        "description": "Dodaje novi instrument u kolekciju",
        "responses": {
          "200": {
            "description": "Instrument uspješno dodan"
          },
          "400": {
            "description": "Neispravni podaci"
          }
        }
      }
    },

    "/api/instrumenti/{naziv}": {
      "get": {
        "summary": "Dohvat instrumenta po nazivu",
        "description": "Vraća pojedini instrument temeljem jedinstvenog naziva",
        "parameters": [
          {
            "name": "naziv",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Instrument pronađen",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Instrument"
                }
              }
            }
          },
          "404": {
            "description": "Instrument ne postoji"
          }
        }
      },
      "put": {
        "summary": "Ažuriranje instrumenta",
        "description": "Ažurira jedan ili više atributa instrumenta",
        "parameters": [
          {
            "name": "naziv",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Instrument uspješno ažuriran"
          },
          "400": {
            "description": "Neispravni podaci"
          },
          "404": {
            "description": "Instrument ne postoji"
          }
        }
      },
      "delete": {
        "summary": "Brisanje instrumenta",
        "description": "Briše instrument iz kolekcije",
        "parameters": [
          {
            "name": "naziv",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Instrument obrisan"
          },
          "404": {
            "description": "Instrument ne postoji"
          }
        }
      }
    },

    "/api/instrumenti/vrsta/{vrsta}": {
      "get": {
        "summary": "Instrumenti po vrsti",
        "description": "Vraća instrumente filtrirane po vrsti",
        "parameters": [
          {
            "name": "vrsta",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtrirana kolekcija instrumenata (JSON-LD)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentCollection"
                }
              }
            }
          }
        }
      }
    },

    "/api/instrumenti/zemlja/{zemlja}": {
      "get": {
        "summary": "Instrumenti po zemlji podrijetla",
        "description": "Vraća instrumente filtrirane po zemlji",
        "parameters": [
          {
            "name": "zemlja",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtrirana kolekcija instrumenata (JSON-LD)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentCollection"
                }
              }
            }
          },
          "404": {
            "description": "Ne postoje instrumenti za traženu zemlju"
          }
        }
      }
    },

    "/api/instrumenti/stoljece/{st}": {
      "get": {
        "summary": "Instrumenti po stoljeću",
        "description": "Vraća instrumente filtrirane po stoljeću nastanka",
        "parameters": [
          {
            "name": "st",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Filtrirana kolekcija instrumenata (JSON-LD)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InstrumentCollection"
                }
              }
            }
          },
          "404": {
            "description": "Ne postoje instrumenti za traženo stoljeće"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Instrument": {
        "type": "object",
        "properties": {
          "nazivinstrumenta": { "type": "string" },
          "vrsta": { "type": "string" },
          "kljuc": { "type": "string" },
          "polifonija": { "type": "string" },
          "zemljapodrijetla": { "type": "string" },
          "stoljecenastanka": { "type": "integer" },
          "materijal": { "type": "string" },
          "prosjecnatezinakg": { "type": "number" },

          "zanrovi": {
            "type": "array",
            "items": { "type": "string" }
          },

          "podvrste": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "nazivPodvrste": { "type": "string" },
                "raspon": { "type": "string" }
              }
            }
          },

          "predstavnici": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ime": { "type": "string" },
                "prezime": { "type": "string" }
              }
            }
          }
        }
      },

      "InstrumentCollection": {
        "type": "object",
        "description": "JSON-LD kolekcija instrumenata",
        "properties": {
          "@context": {
            "type": "object",
            "description": "JSON-LD kontekst koji mapira ključeve na Schema.org"
          },
          "@type": {
            "type": "string",
            "example": "Collection"
          },
          "hasPart": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Instrument"
            }
          }
        }
      }
    }
  }
}
